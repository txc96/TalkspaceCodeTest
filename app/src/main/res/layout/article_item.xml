<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/article"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/large_margin">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/article_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/article_title"
        app:layout_constraintStart_toStartOf="@id/article_image"
        app:layout_constraintTop_toBottomOf="@id/article_image"
        android:layout_marginTop="@dimen/small_margin"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/article_abstract"
        app:layout_constraintStart_toStartOf="@id/article_image"
        app:layout_constraintTop_toBottomOf="@id/article_title"
        app:layout_constraintEnd_toEndOf="@id/article_image"
        android:layout_marginTop="@dimen/small_margin"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/article_author"
        app:layout_constraintStart_toStartOf="@id/article_title"
        app:layout_constraintTop_toBottomOf="@id/article_abstract"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:textStyle="italic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/article_tags"
        app:layout_constraintStart_toEndOf="@id/article_author"
        app:layout_constraintTop_toTopOf="@id/article_author"
        app:layout_constraintBottom_toBottomOf="@id/article_author"
        android:layout_marginStart="@dimen/small_margin"
        android:textStyle="italic"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/download_button"
        android:src="@drawable/download_image"
        app:layout_constraintStart_toEndOf="@id/article_tags"
        app:layout_constraintTop_toTopOf="@id/article_tags"
        app:layout_constraintBottom_toBottomOf="@id/article_tags"
        android:layout_marginStart="@dimen/small_margin"/>

</androidx.constraintlayout.widget.ConstraintLayout>